schema {
    query: Query
    mutation: Mutation
}

type Query {
    # Person queries
    getPeople: [Person!]!
    getPersonById(username: String!): Person
    searchPersonByUsername(username: String!): [Person!]!

    #author queries
    getAuthor: [Author!]!
    getAuthorById(id: String!): Author
    searchAuthorById(id: String!): Author

    # Book queries
    getBook:[Book!]!
    getBookByIsbn(isbn: String!): Book
    searchBookByIsbn(isb: String!): Book

    # Add other domain queries here
}

type Mutation {
    # Login mutations
    login(credentials: LoginInput!): String!

    # Person mutations
    createPerson(person: PersonInput!): Person!
    updatePerson(username: String!, person: PersonInput!): Person!
    deletePerson(username: String!): Boolean!

    # Add other domain mutations here
}